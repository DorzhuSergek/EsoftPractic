<Page x:Class="Project.HousesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HousesPage">

    <Grid>
        <DataGrid x:Name="DataGrid" AutoGenerateColumns="False" IsReadOnly="True" Grid.Row="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="id" Binding="{Binding Path=Id}" Width="*"/>
                <DataGridTextColumn Header="IDDistrict" Binding="{Binding Path=IdDistrict}" Width="*"/>
                <DataGridTextColumn Header="Координаты" Binding="{Binding Path=Coordinate_latitude}" Width="*"/>
                <DataGridTextColumn Header="Координаты" Binding="{Binding Path=Coordinate_longitude}" Width="*"/>
                <DataGridTextColumn Header="Этажи" Binding="{Binding Path=TotalFloors}" Width="*"/>
                <DataGridTextColumn Header="Площадь" Binding="{Binding Path=TotalArea}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
