<Page x:Class="Project.apartmentDemands"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="apartmentDemands">

    <Grid>
        <DataGrid x:Name="DataGrid" AutoGenerateColumns="False" IsReadOnly="True" Grid.Row="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="id" Binding="{Binding Path=Id}" Width="*"/>
                <DataGridTextColumn Header="IDDistrict" Binding="{Binding Path=IDDemands}" Width="*"/>
                <DataGridTextColumn Header="Координаты" Binding="{Binding Path=agents.MiddleName}" Width="*"/>
                <DataGridTextColumn Header="Координаты" Binding="{Binding Path=clients.MiddleName}" Width="*"/>
                <DataGridTextColumn Header="Площадь" Binding="{Binding Path=MinRooms}" Width="*"/>
                <DataGridTextColumn Header="Комнаты" Binding="{Binding Path=MaxRooms}" Width="*"/>
                <DataGridTextColumn Header="Этаж" Binding="{Binding Path=MinFloor}" Width="*"/>
                <DataGridTextColumn Header="Этаж" Binding="{Binding Path=MaxFloor}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
